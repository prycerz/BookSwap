@model BookSwap.Models.UserProfile
@{
    ViewData["Title"] = "Profile";
}
<h2>Profile of @Model.Username</h2>

<div>
    @if (!string.IsNullOrEmpty(Model.ImagePath))
    {
        <img src="~/uploads/@Model.ImagePath" style="width: 200px; height: 200px; object-fit: cover; border-radius: 4px;" />

    }
    else
    {
        <div style="width:200px;height:200px;background:#f0f0f0;
            display:flex;align-items:center;justify-content:center;
            font-size:72px;border-radius:4px;">
            @Model.Username[0]
        </div>
    }
</div>

<form asp-action="Upload" method="post" enctype="multipart/form-data">
    <label for="avatar">Choose a profile picture:</label>
    <p>
    <input type="file" id="avatar" name="avatar" accept="image/png, image/jpeg" />
    </p>
    <br />
    <button type="submit" class="btn btn-primary mt-2">Upload</button>
</form>
<form asp-action="Delete" method="post" style="display:inline;">
    <button type="submit" class="btn btn-danger mt-2" 
        onclick="return confirm('Czy na pewno chcesz usunąć zdjęcie profilowe?');">Usuń zdjęcie</button>
</form>
