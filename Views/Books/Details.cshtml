@model BookSwap.Models.Book

<h2>@Model.Title</h2>
<small class="text-muted">
    Added on: <span id="date-added">@Model.DateAdded.ToString("yyyy-MM-ddTHH:mm:ssZ")</span>
    <script>
        const el = document.getElementById('date-added');
        if (el) {
            const date = new Date(el.textContent);
            el.textContent = date.toLocaleDateString() + ' ' + date.toLocaleTimeString();
        }
    </script>
</small>

<hr />

@if (!string.IsNullOrEmpty(Model.ImageUrl))
{
    <img src="@Model.ImageUrl" alt="@Model.Title" style="max-width: 300px;" class="mb-3" />
}

<div class="d-flex gap-10"></div>
@if (!string.IsNullOrEmpty(Model.SecondImageUrl))
{
    <img src="@Model.SecondImageUrl" alt="@Model.Title" style="max-width: 100px;" class="mb-3" />
}
@if (!string.IsNullOrEmpty(Model.ThirdImageUrl))
{
    <img src="@Model.ThirdImageUrl" alt="@Model.Title" style="max-width: 100px;" class="mb-3" />
}
@if (!string.IsNullOrEmpty(Model.FourthImageUrl))
{
    <img src="@Model.FourthImageUrl" alt="@Model.Title" style="max-width: 100px;" class="mb-3" />
}
</div>


<p style="text-align: center">@Model.Description</p>

<a asp-action="MyBooks" class="btn btn-secondary">Back</a>

