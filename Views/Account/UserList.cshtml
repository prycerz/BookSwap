@model IEnumerable<BookSwap.Models.UserListViewModel>

<h2>Lista użytkowników</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Zdjęcie</th>
            <th>Nazwa użytkownika</th>
            <th>Rola</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var user in Model)
        {
            <tr>
                <td>
                    <img src="@user.ProfileImageUrl" alt="Profil" style="width:50px; height:50px; border-radius:50%;" />
                </td>
                <td>@user.Username</td>
                <td>@user.Role</td>
            </tr>
        }
    </tbody>
</table>
