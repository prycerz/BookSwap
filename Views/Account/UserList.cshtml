@model IEnumerable<BookSwap.Models.UserListViewModel>

<h2>Lista użytkowników</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Zdjęcie</th>
            <th>Nazwa użytkownika</th>
            <th>Rola</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var user in Model)
        {
            <tr>
                <td>
                    <img src="@user.ProfileImageUrl" alt="Profil" style="width:50px; height:50px; border-radius:50%;" />
                </td>
                <td>@user.Username</td>
                <td>@user.Role</td>
                <td>
    @if (user.Role == "User")
    {
        <form asp-action="DeleteUser" asp-route-username="@user.Username" method="post" onsubmit="return confirm('Czy na pewno chcesz usunąć użytkownika?');">
            <button type="submit" class="btn btn-danger btn-sm">Usuń</button>
        </form>
    }
    else
    {
        <span class="text-muted">Nie można usunąć</span>
    }
</td>

            </tr>
        }
    </tbody>
</table>
