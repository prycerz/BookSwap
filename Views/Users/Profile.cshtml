@model BookSwap.Models.UserProfile
@{
    ViewData["Title"] = "Profile";
}

<h2>Profile of @Model.Username</h2>

<button onclick="history.back()" class="btn btn-secondary mb-3">Back</button>

<div>
    @if (!string.IsNullOrEmpty(Model.ImagePath))
    {
        <img src="~/uploads/@Model.ImagePath" style="width: 200px; height: 200px; object-fit: cover; border-radius: 4px;" />
    }
    else
    {
        <div style="width:200px;height:200px;background:#f0f0f0;
            display:flex;align-items:center;justify-content:center;
            font-size:72px;border-radius:4px;">
            @Model.Username[0]
        </div>
    }
</div>

<h3>@Model.Username</h3>

<a asp-controller="Messages" asp-action="Create" asp-route-userId="@Model.Id" class="btn btn-primary mt-3">Napisz wiadomość</a>


